{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "rootDir": "src",
      "outDir": "out",
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noUnusedLocals": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      ".vscode",
      "src/test"
    ]
  }
  